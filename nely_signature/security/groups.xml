<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--
        The original code referenced "base.module_category_crm" which does not exist in all Odoo installations,
        causing a ValueError: External ID not found in the system: base.module_category_crm.
        To fix this, we use the generic "base.module_category_sales_management" which is always present.
        You can change this to another valid category if you want a different grouping in the UI.
        NOTE: The field 'parent_id' is NOT a valid field on model 'res.groups' and causes a ValueError.
        It has been removed from the group definitions below.
        Also, do NOT use <field name="rule_groups"> or <field name="model_access"> in res.groups records.
        Access rules and model access rights must be defined in separate <record model="ir.rule"> and ir.model.access.csv files.
    -->
    <data noupdate="1">
        <record id="group_crm_regie" model="res.groups">
            <field name="name">CRM Regie</field>

        </record>

        <record id="group_crm_regie_responsable" model="res.groups">
            <field name="name">CRM Regie Responsable</field>
            <field name="implied_ids" eval="[(4, ref('group_crm_regie'))]"/>

        </record>

        <record id="group_crm_regie_telepro" model="res.groups">
            <field name="name">CRM Regie Télépro</field>
            <field name="implied_ids" eval="[(4, ref('group_crm_regie'))]"/>

        </record>

        <record id="group_crm_mandataire" model="res.groups">
            <field name="name">CRM Mandataire</field>

        </record>
    </data>
</odoo>
