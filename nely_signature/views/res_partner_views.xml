<odoo>
    <data>
        <record id="view_partner_form_inherit_signature" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.signature</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="is_representative" />
                    <field name="sign_template_id" invisible="not is_representative"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page invisible="not is_representative" string="Condition Terms" name="condition_terms">
                       
                            <field name="condition_terms" />
                        
                    </page>
                </xpath>
                  
            </field>
        </record>
        <record id="view_user_form_inherit_signature" model="ir.ui.view">
            <field name="name">res.users.form.inherit.signature</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='action_id']" position="after">
                    <field name="sale_representative_id" domain="[('is_representative', '=', True)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>