<odoo>
    <data>
        <record id="view_res_config_settings_inherit_signature" model="ir.ui.view">
            <field name="name">res.config.settings.inherit.signature</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sign.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//setting[@id='use_sign_terms']" position="before">
                    <setting help="Products" name="sale_product_id" widget="many2one"
                             options="{'no_create': True}" string="Signature Product">
                        <field name="sale_product_id" readonly="False" force_save="1" />
                    </setting>
                    <setting help="Products" name="prime_product_id" widget="many2one"
                             options="{'no_create': True}" string="Prime Product">
                        <field name="prime_product_id"  readonly="False" force_save="1"/>
                    </setting>

                </xpath>
            </field>
        </record>
        <record id="view_res_company_inherit_signature" model="ir.ui.view">
            <field name="name">res.company.inherit.signature</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Nely Settings" name="nely_settings">
                        <group string="Nely Settings">
                            <field name="signature_product_id"/>
                            <field name="prime_product_id"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>