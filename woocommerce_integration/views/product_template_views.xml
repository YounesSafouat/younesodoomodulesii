<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_template_form_view_woocommerce" model="ir.ui.view">
            <field name="name">product.template.form.view.woocommerce</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@name='group_general']" position="after">
                    <group string="WooCommerce Settings" name="woocommerce_quick_settings">
                        <group>
                            <field name="wc_connection_id" 
                                   string="WooCommerce Store" 
                                   domain="[('active', '=', True)]"
                                   placeholder="Select a WooCommerce connection..."
                                   help="Select a WooCommerce connection to link this product to your store. You can enable sync after selecting a connection."/>
                            <field name="wc_sync_enabled" string="ðŸ”„ Sync with WooCommerce"
                                   invisible="not wc_connection_id"/>
                        </group>
                        <group>
                            <field name="wc_sync_status" 
                                   widget="badge" 
                                   readonly="1" 
                                   invisible="not wc_sync_enabled"/>
                            <field name="wc_product_id" 
                                   readonly="1" 
                                   invisible="not wc_product_id"
                                   string="WooCommerce ID"/>
                        </group>
                    </group>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page string="WooCommerce" name="woocommerce">

                        <div class="alert alert-info" role="alert">
                            <h4><i class="fa fa-sync"/> WooCommerce Synchronization</h4>
                            <p><strong>How it works:</strong></p>
                            <ol>
                                <li>Select a <strong>WooCommerce Connection</strong> to link this product to your store</li>
                                <li>Enable <strong>"Sync with WooCommerce"</strong> to activate synchronization</li>
                                <li>When enabled, the product will automatically sync based on your <strong>Sync Direction</strong> setting</li>
                                <li>Changes to price, name, description, and images will sync automatically if <strong>"Auto Sync on Changes"</strong> is enabled</li>
                            </ol>
                            <p><strong>Sync Directions:</strong></p>
                            <ul>
                                <li><strong>Bidirectional:</strong> Changes sync both ways (Odoo â†” WooCommerce)</li>
                                <li><strong>Odoo â†’ WooCommerce:</strong> Only Odoo changes sync to WooCommerce</li>
                                <li><strong>WooCommerce â†’ Odoo:</strong> Only WooCommerce changes sync to Odoo</li>
                            </ul>
                            <p><strong>Note:</strong> When you set a connection, sync is automatically enabled and the sync direction is set from the connection's default settings.</p>
                        </div>

                        <group>
                            <group>
                                <field name="wc_sync_enabled" string="Enable WooCommerce Sync"
                                       help="Enable synchronization between this Odoo product and WooCommerce. When enabled, changes will sync based on the sync direction."/>
                                <field name="wc_sync_status" widget="badge" readonly="1" string="Sync Status"
                                       help="Current synchronization status. Green = synced, Yellow = pending, Red = error"/>
                            </group>
                            <div class="alert alert-warning" role="alert" invisible="not wc_sync_enabled">
                                <h4><i class="fa fa-lock"/> Sensitive Information</h4>
                                <p>The <strong>WooCommerce Product ID</strong> and <strong>Connection</strong> are sensitive fields that link this product to your WooCommerce store. Changing these could break the synchronization.</p>
                            </div>

                            <group>
                                <field name="wc_connection_id" string="WooCommerce Connection"
                                       domain="[('active', '=', True)]"
                                       help="WooCommerce connection. Once set and products are synced, changing this could break synchronization."/>
                                <field name="wc_product_id" readonly="1" string="WooCommerce Product ID"
                                       help="WooCommerce Product ID - This is set automatically when the product is created in WooCommerce. Do not change this."/>
                                <field name="wc_product_url" widget="url" readonly="1" string="WooCommerce URL" invisible="not wc_product_url"
                                       help="Direct link to view this product in your WooCommerce store"/>
                            </group>
                        </group>

                        <div class="alert alert-info" role="alert" invisible="not wc_sync_enabled">
                            <h4><i class="fa fa-dollar-sign"/> Pricing</h4>
                            <p><strong>Price:</strong> This is the regular/base price. It syncs bidirectionally with WooCommerce's regular price.</p>
                            <p><strong>Manual Sale Price:</strong> Set a manual sale price to override promotions. When set, any active promotions for this product will be automatically disabled.</p>
                            <p><strong>WooCommerce Sale Price:</strong> This shows the current sale price in WooCommerce (from promotions or manual override).</p>
                        </div>

                        <group string="Pricing" invisible="not wc_sync_enabled">
                            <group>
                                <field name="list_price" string="Price" 
                                       help="Product price. This syncs with WooCommerce regular price."/>
                                <field name="wc_manual_sale_price" string="Manual Sale Price"
                                       help="Manually set sale price for WooCommerce. When set, this will override any active promotions and disable them for this product. Leave empty to use automatic promotion pricing."/>
                                <field name="wc_sale_price" string="WooCommerce Sale Price" readonly="1"
                                       help="Current sale price in WooCommerce (from promotions or manual override)."/>
                            </group>
                        </group>

                        <group string="Advanced Settings" invisible="not wc_sync_enabled">
                            <group>
                                <field name="wc_auto_sync" string="Auto Sync on Changes"
                                       help="Automatically sync changes to WooCommerce when you save this product. If disabled, you'll need to manually click 'Sync to WooCommerce'."/>
                                <field name="wc_sync_direction" string="Sync Direction" readonly="1"
                                       help="How changes sync between Odoo and WooCommerce. This is set from your connection's default settings but can be overridden per product."/>
                            </group>
                            <group>
                                <field name="wc_image_sync_enabled" string="Include Images"
                                       help="Include product images when syncing to WooCommerce. The main inventory image will always be the main image in WooCommerce."/>
                                <field name="wc_last_sync" readonly="1" string="Last Sync"
                                       help="Last time this product was synchronized with WooCommerce"/>
                            </group>
                        </group>

                        <group string="Error Information" invisible="wc_sync_status != 'error'">
                            <field name="wc_last_error" readonly="1" widget="text"/>
                        </group>

                        <div class="oe_button_box" name="woocommerce_button_box">
                            <button name="action_sync_to_woocommerce" type="object" 
                                    class="oe_stat_button" icon="fa-refresh"
                                    string="Sync to WooCommerce">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Sync to</span>
                                    <span class="o_stat_text">WooCommerce</span>
                                </div>
                            </button>
                        </div>

                        <div class="alert alert-info" role="alert" invisible="not wc_sync_enabled">
                            <h4><i class="fa fa-images"/> Image Management</h4>
                            <p><strong>Important:</strong> The main product image in Inventory (the one you see in the product form) will always be the main image in WooCommerce.</p>
                            <p>Click <strong>"Manage WooCommerce Images"</strong> to:</p>
                            <ul>
                                <li>View all images associated with this product in WooCommerce</li>
                                <li>Upload additional images</li>
                                <li>Set image order and alt text</li>
                                <li>Sync images to your WooCommerce store</li>
                            </ul>
                        </div>

                        <group string="Image Management" invisible="not wc_sync_enabled">
                            <group>
                                <field name="wc_image_sync_enabled" string="Include Images in Sync"
                                       help="Enable to include product images when syncing to WooCommerce"/>
                            </group>
                            <group>
                                <button name="action_view_woocommerce_images" type="object" 
                                        class="btn btn-primary" 
                                        string="Manage WooCommerce Images"
                                        invisible="not wc_product_id"
                                        help="Open the WooCommerce product page to manage images">
                                    <i class="fa fa-images"></i> Go to Image Manager
                                </button>
                            </group>
                        </group>

                    </page>
                </xpath>

            </field>
        </record>

        <record id="product_template_list_view_woocommerce" model="ir.ui.view">
            <field name="name">product.template.list.view.woocommerce</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='list_price']" position="after">
                    <field name="wc_sale_price" optional="hide" string="WC Sale Price" readonly="1" invisible="not wc_sync_enabled"/>
                    <field name="wc_sync_enabled" widget="boolean_toggle" optional="hide" string="WC Sync"/>
                    <field name="wc_sync_status" widget="badge" optional="hide" string="Status"
                           decoration-success="wc_sync_status == 'synced'"
                           decoration-warning="wc_sync_status in ['not_synced', 'pending_update']"
                           decoration-danger="wc_sync_status in ['error', 'conflict']"/>
                    <field name="wc_sync_direction" optional="hide" string="Direction"/>
                    <field name="wc_last_sync" optional="hide" string="Last Sync"/>
                </xpath>

            </field>
        </record>

        <record id="product_template_search_view_woocommerce" model="ir.ui.view">
            <field name="name">product.template.search.view.woocommerce</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">

                <xpath expr="//filter[@name='filter_to_sell']" position="after">
                    <separator/>
                    <filter string="WooCommerce Sync Enabled" name="wc_sync_enabled" domain="[('wc_sync_enabled', '=', True)]"/>
                    <filter string="WooCommerce Synced" name="wc_synced" domain="[('wc_sync_status', '=', 'synced')]"/>
                    <filter string="Pending Update" name="wc_pending" domain="[('wc_sync_status', '=', 'pending_update')]"/>
                    <filter string="Sync Error" name="wc_error" domain="[('wc_sync_status', '=', 'error')]"/>
                    <filter string="Sync Conflict" name="wc_conflict" domain="[('wc_sync_status', '=', 'conflict')]"/>
                    <filter string="WooCommerce Products" name="wc_products" domain="[('wc_product_id', '!=', False)]"/>
                </xpath>

            </field>
        </record>

        <record id="action_batch_sync_to_woocommerce" model="ir.actions.server">
            <field name="name">Sync Selected Products to WooCommerce</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
if records:
    action = records.action_batch_sync_to_woocommerce()
else:
    action = {'type': 'ir.actions.client', 'tag': 'display_notification', 'params': {'title': 'No products selected', 'message': 'Please select products to sync.', 'type': 'warning'}}
            </field>
        </record>

        <record id="action_resolve_sync_conflicts" model="ir.actions.server">
            <field name="name">Resolve Sync Conflicts</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="binding_model_id" ref="product.model_product_template"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
if records:
    action = records.action_resolve_sync_conflicts()
else:
    action = {'type': 'ir.actions.client', 'tag': 'display_notification', 'params': {'title': 'No products selected', 'message': 'Please select products with conflicts.', 'type': 'warning'}}
            </field>
        </record>

    </data>
</odoo>
