<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="login_custom_message" inherit_id="web.login" name="Custom Login Message">
        <xpath expr="//button[@type='submit']" position="after">
            <div class="alert alert-info mb-3" role="alert">
                <i class="fa fa-info-circle me-2"></i>
                <strong>Bienvenue !</strong>
                <p class="mb-0 mt-2">
                Si vous souhaitez ouvrir un compte, merci d’envoyer un mail à
                <a href="mailto:velos@isolidarite.com" class="alert-link">
                        <i class="fa fa-envelope me-1"></i>velos@isolidarite.com
                </a>
                    
                </p>
            </div>
        </xpath>
    </template>
</odoo>