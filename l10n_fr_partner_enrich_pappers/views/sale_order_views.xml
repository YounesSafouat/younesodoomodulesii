<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_inherit_large_totals" model="ir.ui.view">
        <field name="name">sale.order.form.large.totals</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale_total']" position="attributes">
                 <attribute name="class">large_totals_group</attribute>
            </xpath>
        </field>
    </record>
</odoo>