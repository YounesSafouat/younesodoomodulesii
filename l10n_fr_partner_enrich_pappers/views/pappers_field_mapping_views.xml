<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- list View -->
    <record id="view_pappers_field_mapping_list" model="ir.ui.view">
        <field name="name">pappers.field.mapping.list</field>
        <field name="model">pappers.field.mapping</field>
        <field name="arch" type="xml">
            <list>
                <field name="odoo_field" />
                <field name="pappers_field" />
                <field name="active" widget="boolean_toggle" />
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_pappers_field_mapping_form" model="ir.ui.view">
        <field name="name">pappers.field.mapping.form</field>
        <field name="model">pappers.field.mapping</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="odoo_field" placeholder="e.g. 'name' or 'siret_pappers'" />
                            <field name="pappers_field"
                                placeholder="e.g. 'siren' or 'siege.code_postal'" />
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_pappers_field_mapping_search" model="ir.ui.view">
        <field name="name">pappers.field.mapping.search</field>
        <field name="model">pappers.field.mapping</field>
        <field name="arch" type="xml">
            <search>
                <field name="odoo_field" />
                <field name="pappers_field" />
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]" />
                <group expand="0" string="Group By">
                    <filter string="Company" name="company_id" context="{'group_by': 'company_id'}"
                        groups="base.group_multi_company" />
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_pappers_field_mapping" model="ir.actions.act_window">
        <field name="name">Pappers Field Mapping</field>
        <field name="res_model">pappers.field.mapping</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No field mappings found
            </p>
            <p>
                The default field mappings are automatically created.
                You can modify them or create new ones if needed.
            </p>
        </field>
    </record>

    <!-- Menu Item (only visible in debug mode) -->
    <menuitem id="menu_pappers_field_mapping"
        name="Pappers Field Mapping"
        parent="contacts.res_partner_menu_config"
        action="action_pappers_field_mapping"
        sequence="20"
        groups="base.group_no_one" />
</odoo> 