<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="sale_order_portal_template_stripe" inherit_id="sale.sale_order_portal_template" name="Sale Order Portal Template - Stripe">

            <xpath expr="//div[@id='sale_order_sidebar_button']/div[hasclass('o_download_pdf')]" position="before">
                <a 
                   role="button" 
                   id="o_sale_portal_paynow_stripe" 
                   t-att-href="sale_order.stripe_payment_link_url" 
                   target="_blank"
                   class="btn btn-primary w-100 mb-2">
                    <i class="fa fa-credit-card"/> Pay Now (Stripe)
                </a>
                
                <a role="button" 
                   t-attf-href="/my/custom_action/{{sale_order.id}}"
                   class="btn btn-warning w-100 mb-2">
                    <i class="fa fa-envelope"/> Request Info
                </a>
            </xpath>
            
            </template>
    </data>
</odoo>