<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend portal template to add Stripe payment link data attribute for JavaScript -->
        <template id="sale_order_portal_content_stripe" inherit_id="sale.sale_order_portal_content" name="Sale Order Portal Content - Stripe">
            <!-- Add data attribute to main content div with Stripe payment link URL -->
            <xpath expr="//div[@id='quote_content']" position="attributes">
                <attribute name="t-att-data-stripe-payment-link-url">sale_order.stripe_payment_link_url</attribute>
            </xpath>
        </template>
    </data>
</odoo>
