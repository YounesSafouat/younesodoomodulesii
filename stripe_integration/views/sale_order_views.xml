<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sale_order_form_stripe" model="ir.ui.view">
            <field name="name">sale.order.form.stripe</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_generate_stripe_payment_link" 
                            type="object" 
                            string="Generate Payment Link" 
                            class="btn-primary" 
                            invisible="stripe_payment_link_id"
                            confirm="Generate a Stripe payment link for this quotation?"/>
                    <button name="action_open_stripe_payment_link" 
                            type="object" 
                            string="Open Payment Link" 
                            class="btn-secondary" 
                            invisible="not stripe_payment_link_url"/>
                    <button name="action_open_stripe_invoice" 
                            type="object" 
                            string="Open Invoice" 
                            class="btn-secondary" 
                            invisible="not stripe_hosted_invoice_url"/>
                </xpath>
                
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="stripe_payment_link_id" invisible="1"/>
                    <field name="stripe_payment_link_url" invisible="1"/>
                    <field name="stripe_invoice_id" invisible="1"/>
                    <field name="stripe_hosted_invoice_url" invisible="1"/>
                </xpath>
                
                <xpath expr="//sheet" position="inside">
                    <group string="Stripe Payment Link" invisible="not stripe_payment_link_id" col="2">
                        <field name="stripe_payment_link_url" readonly="1"/>
                        <field name="stripe_payment_link_status" readonly="1"/>
                        <field name="stripe_payment_link_created" readonly="1"/>
                        <field name="stripe_payment_succeeded" readonly="1"/>
                        <field name="stripe_invoice_id" readonly="1" invisible="not stripe_invoice_id"/>
                        <field name="stripe_hosted_invoice_url" readonly="1" invisible="not stripe_hosted_invoice_url"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>